{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"declaration": false,
		"declarationMap": false,
		"strict": true,
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"noImplicitAny": false, 
		"resolveJsonModule": true,
		"baseUrl": "./scripts",
		"paths": {
			"@types": ["../scripts/types.mts"],
		},
		"outDir": ".dist"
	},
	"include": [
		"./scripts/**/*",
	],
	"exclude": ["node_modules"]
}